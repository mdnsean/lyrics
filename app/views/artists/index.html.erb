<%= render 'front' %>

<!--
<%= render 'search' %>
<%= render 'sidebar' %>
<%= render 'charts' %>
  -->
<div class="container">
  <div class="row">
    
    <div class="col-lg-2" id="search-container">
      <%= form_tag("/search", method: "post") do %>  
        <%= label_tag(:name, "Search New Artist") %>
        <%= text_field_tag :name, params[:name], id: "artist-name-input" %>
        <%= submit_tag("Go!", id:"submit-artist-button") %>
      <% end %>
      <div><%= flash[:notice] %></div>
    </div>

    <div class="col-lg-2" id="sidebar-container">
      
      <div class="row">
        <h4>Minimum Word Length: <span id="min-display">5</span></h4>
      </div>

      <input type="range" min="1" max="10" id="min-word-length">
      
      <div class="row">
        <h4>Choose Artist</h4>
      </div>

      <div class="row">
        <div class="col-lg-2 list-group" id="x-button-list">
          <% @artists.each do |artist| %>
              <%= button_to "X", artist_path(artist.id), method: :delete, class: "list-group-item" %>
          <% end %>
        </div>
        
        <div class="col-lg-10 list-group" id="artist-list">
          <% @artists.each do |artist| %>
              <button type="button" class="list-group-item get-artist-button" name="<%= artist.id %>">
                <%= artist.name.titleize %>
              </button>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-lg-8" id="charts-container">
      <div id="chart-tabs">
        <div class="tab">
          <input type="radio" id="donut-chart-tab" name="choose-chart" checked>
          <label for="donut-chart-tab">Donut Chart</label>    
          <div class="chart-content" id="donut-chart" style="width:100%; height:400px;"></div>
        </div>

        <div class="tab">
          <input type="radio" id="bar-chart-tab" name="choose-chart">
          <label for="bar-chart-tab">Bar Chart</label>
          <div class="chart-content" id="bar-chart" style="width:100%; height:400px;"></div>
        </div>
      </div>
    </div>
  </div>
</div>